{
  "compilerOptions": {
    "target": "ES2020", // Harus ES2020 atau lebih tinggi
    "module": "CommonJS", // Sesuaikan dengan lingkungan Node.js
    "emitDecoratorMetadata": true, // Wajib untuk TypeORM
    "experimentalDecorators": true, // Wajib untuk TypeORM
    "strict": true, // Opsional, disarankan
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
